{
  "hud_title_text": {
    "type": "panel",
    "size": [
      "100%cm",
      "100%c"
    ],
    "anchor_from": "right_middle",
    "anchor_to": "right_middle",
    "alpha": 1,
    "controls": [
      {
        "sidebar": {
          "type": "panel",
          "size": [
            "100%c",
            "100%c"
          ],
          "offset": [
            24,
            36
          ],
          "controls": [
            {
              "title_background": {
                "type": "image",
                "alpha": 1,
                "size": [
                  145,
                  206
                ],
                "offset": [
                  -3,
                  -15
                ],
                "texture": "textures/ui/title_background",
                "controls": [
                  {
                    "sidebarlogo": {
                      "type": "image",
                      "texture": "textures/ui/sidebar_logo",
                      "anchor_from": "top_middle",
                      "anchor_to": "top_middle",
                      "size": [
                        0.01,
                        0.01
                      ],
                      "offset": [
                        0,
                        0.25
                      ],
                      "layer": 50,
                      "alpha": 2
                    }
                  },
                  {
                    "title": {
                      "size": [
                        150,
                        250
                      ],
                      "font_type": "Ariel",
                      "type": "label",
                      "text": "$title_text",
                      "anchor_from": "bottom_middle",
                      "anchor_to": "bottom_middle",
                      "color": "$tool_tip_text",
                      "text_alignment": "left",
                      "offset": [
                        35,
                        78
                      ],
                      "layer": 1,
                      "shadow": true,
                      "localize": true,
                      "font_scale_factor": 0.8,
                      "alpha": 2
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  },


  "namespace": "hud",
  "hud_player_renderer": {
    "type": "panel",
    "size": [
      15,
      15
    ],
    "controls": [
      {
        "hud_player": {
          "type": "custom",
          "renderer": "hud_player_renderer",
          "layer": 1,
          "animation_reset_name": "screen_animation_reset",
          "anims": [
            "@common.screen_exit_size_animation_push",
            "@common.screen_exit_size_animation_pop",
            "@common.screen_entrance_size_animation_push",
            "@common.screen_entrance_size_animation_pop"
          ],
          "bindings": [
            {
              "binding_name": "#paper_doll_visible",
              "binding_name_override": "#visible"
            }
          ]
        }
      }
    ]
  },
  "factory:image_example_1": {
    "type": "image",
    "texture": "textures/ui/crateBase",
    "anchor_from": "center_middle",
    "anchor_to": "center_middle",
    "size": [
      500,
      500
    ],
    "offset": [
      0,
      0
    ],
    "alpha": 1.0,
    "layer": 1,
    "ignored": "(not ($title_text = 'display.image1'))"
  },
  "factory:image_example_2": {
    "type": "image",
    "texture": "textures/ui/crateBase",
    "anchor_from": "center_middle",
    "anchor_to": "center_middle",
    "size": [
      250,
      250
    ],
    "offset": [
      0,
      0
    ],
    "alpha": 1.0,
    "layer": 1,
    "ignored": "(not ($title_text = 'display.image2'))"
  },
  "factory:image_example_1_factory": {
    "type": "panel",
    "factory": {
      "name": "hud_title_text_factory",
      "control_ids": {
        "hud_title_text": "factory:image_example_1@hud.factory:image_example_1"
      }
    }
  },
  "factory:image_example_2_factory": {
    "type": "panel",
    "factory": {
      "name": "hud_title_text_factory",
      "control_ids": {
        "hud_title_text": "factory:image_example_2@hud.factory:image_example_2"
      }
    }
  },
  "root_panel_modifications": {
    "modifications": [
      {
        "array_name": "controls",
        "operation": "insert_front",
        "value": {
          "factory:image_example_1_factory@hud.factory:image_example_1_factory": {}
        }
      },
      {
        "array_name": "controls",
        "operation": "insert_front",
        "value": {
          "factory:image_example_2_factory@hud.factory:image_example_2_factory": {}
        }
      }
    ]
  },



"chat_label": {
    "enable_profanity_filter": false,
    "max_size": ["95% - 8px", "95%c"]
},
"chat_panel": {
    "type": "stack_panel",
    "offset": [0, 32],
    "size": ["95%", "95%c"],
    "controls": [
        {
            "padding": {
                "type": "panel",
                "size": ["95%", 18]
            }
        },
        {
            "stack_panel": {
                "type": "stack_panel",
                "anchor_from": "bottom_left",
                "anchor_to": "bottom_left",
                "factory": {
                    "name": "chat_item_factory",
                    "max_children_size": 5,
                    "control_ids": {
                        "chat_item": "chat_item@hud.chat_grid_item"
                    }
                }
            }
        }
    ]
},
"anim_chat_txt_wait": {
    "anim_type": "wait",
    "duration": 5,
    "next": "@hud.anim_chat_txt_alpha"
},
"anim_chat_txt_alpha": {
    "anim_type": "offset",
    "easing": "out_cubic",
    "from": [5, 5],
    "to": [-250, 5],
    "duration": 0.25,
    "destroy_at_end": "chat_grid_item"
},
"chat_grid_item": {
    "type": "panel",
    "layer": 1,
    "size": ["95%", "95%c"],
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "offset": [0, 132],
    "controls": [
        {
            "padding": {
                "type": "panel",
                "size": ["95%", 4]
            }
        },
        {
            "chat_background": {
                "type": "image",
                "texture": "textures/ui/hud_tip_text_background",
                "size": ["95% + 6px", "95%c + 2px"],
                "anchor_from": "top_left",
                "anchor_to": "top_left",
                "offset": {
                    "anim_type": "offset",
                    "easing": "out_cubic",
                    "from": [-250, 5],
                    "to": [5, 5],
                    "duration": 0.5
                },
                "alpha": 0.5,
                "anims": ["@hud.anim_chat_txt_wait"],
                "controls": [
                    {
                        "chat_text@chat_label": {}
                    }
                ],
                "bindings": [
                    {
                        "binding_name": "#chat_text",
                        "binding_name_override": "#text",
                        "binding_type": "collection",
                        "binding_collection_name": "chat_text_grid",
                        "binding_condition": "once"
                    },
            {}
          ]
        }
      }
    ]
  },


"root_panel": {
    "modifications": [
      {
        "array_name": "controls",
        "operation": "insert_back",
        "value": [
          {
            "new@hud.new_position": {}
          },
          {
            "days_played@hud.days_played_display": {}
          }
        ]
      }
    ]
  },
  "player_position": {
    "ignored": true
  },
  "number_of_days_played": {
    "ignored": true
  },
  "new_position": {
    "type": "image",
    "texture": "textures/ui/hud_tip_text_background",
    "alpha": 0.5,
    "size": ["100%c + 6px", "100%c"],
    "offset": [5, 3],
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "controls": [
      {
        "coords": {
          "type": "label",
          "text": "#text",
          "size": ["default", "default"],
          "offset": [2, 0],
          "bindings": [
            {
              "binding_name": "#player_position_text",
              "binding_name_override": "#text",
              "binding_condition": "always_when_visible",
              "binding_type": "global"
            }
          ]
        }
      }
    ],
    "bindings": [
      {
        "binding_name": "#player_position_visible",
        "binding_name_override": "#visible",
        "binding_condition": "always",
        "binding_type": "global"
      }
    ]
  },
  "days_played_display": {
    "type": "image",
    "texture": "textures/ui/hud_tip_text_background",
    "alpha": 0.5,
    "size": ["100%c + 6px", "100%c"],
    "offset": [5, 15],
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "controls": [
      {
        "days_text": {
          "type": "label",
          "text": "#text",
          "size": ["default", "default"],
          "offset": [2, 0],
          "bindings": [
            {
              "binding_name": "#number_of_days_played_text",
              "binding_name_override": "#text",
              "binding_condition": "always_when_visible",
              "binding_type": "global"
            }
          ]
        }
      }
    ],
    "bindings": [
      {
        "binding_name": "#number_of_days_played_visible",
        "binding_name_override": "#visible",
        "binding_condition": "always",
        "binding_type": "global"
        }
    ]
}}

